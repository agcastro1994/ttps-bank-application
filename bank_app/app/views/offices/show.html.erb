<h1> <%= @office.name %> </h1>

<span> <%= @office.address %> </span>

<span> <%= @office.phone %> </span>


<ul>
  <li><%= link_to "Editar", edit_office_path(@office) %></li>
   <li><%= link_to "Eliminar", office_path(@office), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Esta seguro?"
                  } %></li>
</ul>

<h3>Horarios</h3>
<%= render @office.schedules %>


<h3>Agregar horarios:</h3>

<%= render 'schedules/form', office: @office %>
