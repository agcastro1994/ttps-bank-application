<div class="form-office">
<%= form_with model: [ @office, @office.schedules.build ] do |form| %>
   <div class="mb-3">
    <%= form.select :days, options_for_select(@days),{:include_blank => false}, :multiple => true, :class => "form-select"%>
  </div>
  <div class="mb-3">
    <%= form.label value="Apertura" %><br>
    <%= form.time_field :start_at, class:"form-control" %>
  </div>
  <div class="mb-3">
    <%= form.label value="Cierre" %><br>
    <%= form.time_field :end_at, class:"form-control" %>
  </div>
  <div class="mb-3">
    <%= form.submit value="Enviar" %>
  </div>
<% end %>
</div>
